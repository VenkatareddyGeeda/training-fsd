<h1>remove childnode</h1>
<ul>
   <li>ganesh</li>
   <li>ravi</li>
   <li>sam</li>
</ul>
<script>
   const ul=document.querySelector("ul")
   const lists=document.querySelectorAll("li")
   console.log(ul)
   console.log(lists)

   for(const list of lists){
      console.log(`remove:${list.textContent}`)
      ul.removeChild(list)
    /*  console.log(lists)*/
      console.log(list)  
 }

</script>
